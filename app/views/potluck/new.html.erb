<h1>What are the details?</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@potluck, url: {controller: "potluck", action: "create"}) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>

      <%= f.label :time %>
      <%= f.time_field :time, class: 'form-control' %>

      <%= f.label :party_size %>
      <%= f.number_field :party_size, class: 'form-control' %>

      <%= f.submit "Save Potluck", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>