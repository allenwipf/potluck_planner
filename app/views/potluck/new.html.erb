<div class="container bottom_space">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center">What are the details?</h2>

      <%= render 'layouts/errors_potluck' %>
      <%= form_for(@potluck, url: {action: "create"}) do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :location %>
        <%= f.text_field :location, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>

        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control' %>

        <%= f.label :time %>
        <%= f.time_field :time, class: 'form-control' %>

        <%= f.label :party_size %>
        <%= f.number_field :party_size, class: 'form-control' %>

        <%= f.label :user_id, class: 'collapse'%>
        <%= f.number_field :user_id, class: 'form-control collapse' %>

        <%= f.submit "Save Potluck", class: "btn btn-primary button_margin" %>
      <% end %>
    </div>
  </div>
</div>
