<h1>Update Potluck!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@potluck, url: {action: "update"}) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>

      <%= f.label :time %>
      <%= f.time_field :time, class: 'form-control' %>

      <%= f.label :party_size %>
      <%= f.number_field :party_size, class: 'form-control' %>

      <%= f.label :user_id, class: 'collapse'  %>
      <%= f.number_field :user_id, class: 'form-control collapse' %>

      <%= f.submit "Update Potluck", class: "btn form_button btn-primary" %>
    <% end %>
  </div>
</div>
<form action="/item/update" method="post">
<table class="table">
	<thead class="">
		<tr class="table-bordered">
			<th>Item Name</th>
			<th>Category</th>
			<th>Amount</th>
			<th>Claimed By</th>
			<th></th>
			<th></th>
		</tr>
		<tr>
			<th><span class ='label label-success' id='new_item'>add item <span class="glyphicon glyphicon-plus"></span> </span></th>
		</tr>
	</thead>
	<tbody class="list_items table-bordered">

		<% @potluck.items.sort_by {|item| item.id}.reverse.each do |item|  %>
  		
  			<%= fields_for "item[]", item do |item_f| %>
					<tr class="item_row">
					 <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
						<td><%= item_f.text_field :name, class: 'form-control item_name'%></td>
						<td><%= item_f.text_field :category, class: 'form-control'%></td>
						<td><%= item_f.text_field :amount, class: 'form-control'%></td>
						<td><%= item_f.text_field :claimed_by, class: 'form-control'%></td>
						<td><%= item_f.number_field :potluck_id, class: 'collapse form-control potluck_id'%></td>
						<td><span class="glyphicon glyphicon-remove  text-danger remove_item"  scope="row" role="button"></span></td>

					</tr>
				<% end %>
		  <% end %>	
	</tbody>
	</table>
	<button class="btn btn-default" name="commit" type='submit'>Save Items <span class="glyphicon glyphicon-save"></button>
</form>
